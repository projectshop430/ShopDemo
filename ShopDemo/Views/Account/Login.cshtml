@model ShopDemo.Data.DTOs.Account.LoginUserDTO

@{
	ViewData["Title"] = "ورود به حساب کاربری";
}
@section scripts
	{
	<partial name="_JqueryValidator" />
}
<div class="breadcrumbs_area">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<div class="breadcrumb_content">
					<ul>
						<li><a href="index.html">خانه</a></li>
						<li>ورود به حساب کاربری</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>


<div class="customer_login mt-60">
	<div class="container">
		<div class="row">

			<!--register area start-->
			<div class="col-lg-6 col-md-6 offset-lg-3 offset-md-3">
				<div class="account_form register">
					<h2>لاگین</h2>
					<form asp-asp-controller="Account" asp-action="Login" method="post">
						<p>
							<label>تلفن همراه <span>*</span></label>
							<input type="text" asp-for="Mobile">
							<span asp-validation-for="Mobile" class="text-danger"></span>
						</p>
						<p>
							<label>رمز عبور <span>*</span></label>
							<input type="password" asp-for="Password">
							<span asp-validation-for="Password" class="text-danger"></span>
						</p>
						<div class="login_submit">
							<button type="submit">ورود</button>
						</div>
					</form>
				</div>
			</div>
			<!--register area end-->
		</div>
	</div>
</div>


